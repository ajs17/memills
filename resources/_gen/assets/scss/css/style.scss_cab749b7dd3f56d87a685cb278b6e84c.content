@charset "UTF-8";
/**
 * Vertical rhythm by Syncope
 * http://nowodzinski.pl/syncope
 */
/**
 * Sets verticalâ€“rhythm for the given level.
 * Usage:
 *
 * 	h1 {
 * 		@include v-rhythm( 4 );
 * 	}
 */
html, body {
  font: 16px/1.6 Optima, Candara, Calibri, Arial, sans-serif;
  font-size: 1rem;
  line-height: 1.63rem;
  padding-top: 0.5rem;
  margin-bottom: 1.13rem; }

body {
  max-width: 800px;
  margin: auto;
  padding: 1em;
  background-color: #4D3636;
  color: white; }

h1 {
  font-size: 2.63rem;
  line-height: 3.26rem;
  padding-top: 0.286rem;
  margin-bottom: 0.333rem;
  font-weight: bolder; }

h2 {
  font-size: 1.63rem;
  line-height: 2rem;
  padding-top: 0.654rem;
  margin-bottom: 0.346rem;
  font-weight: normal; }

a {
  color: white;
  text-decoration: none; }

a:hover {
  text-decoration: underline; }

a:visited {
  color: white;
  text-decoration: none; }

hr {
  color: #4D3636; }

footer ul {
  margin-top: 0; }

.menu {
  padding: 0; }

.menu li {
  display: inline-block; }

.article-meta, .menu a {
  padding: 5px;
  border-radius: 5px; }

nav {
  background: #664747;
  margin: 16px;
  padding: 3px 1em 3px;
  width: 50%;
  min-width: 250px; }

img, iframe, video {
  max-width: 100%;
  width: auto\9;
  height: auto;
  vertical-align: middle;
  border: 0;
  -ms-interpolation-mode: bicubic;
  margin: 1em;
  padding-bottom: 1em; }

main {
  hyphens: auto; }

blockquote {
  max-width: 100%;
  width: auto\9;
  margin: 0 -1em 1em 1em;
  padding: 1em;
  background: #664747;
  border-left: 5px solid white;
  hyphens: none; }

figure {
  padding-left: 0;
  margin-left: 0;
  padding-bottom: 2em; }

figure img {
  margin-bottom: 0; }

figcaption, figure footer {
  padding-left: 1em;
  font-size: 90%; }

figure footer {
  margin-top: 1.5em; }

figcaption {
  margin-top: 0; }

table {
  width: 100%;
  margin: auto;
  border-top: 1px solid white;
  border-bottom: 1px solid white;
  margin-top: 2em;
  margin-bottom: 3em; }

table thead th {
  border-bottom: 1px solid white; }

th, td {
  padding: 5px;
  text-align: left; }

thead, tfoot, tr:nth-child(even) {
  background: #664747; }

table caption {
  font-style: normal;
  font-weight: bold; }

table cite {
  font-style: italic;
  font-weight: normal; }

.clearfix::after {
  content: "";
  clear: both;
  display: table; }

.clearfix {
  display: flow-root; }

aside {
  display: none; }

a, a:hover, a:visited {
  text-decoration: underline; }

table {
  font-size: 90%; }
